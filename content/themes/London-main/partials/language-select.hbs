<script>
$(document).ready(function () {
  // bind change event to select
  $('.lang-select').on('click', function () {
    var homeName ="index"
    var currentLang = $('.lang-box').first().text();
    var url = new URL(window.location.href);
    var urlString = window.location.href;
    var modifier = currentLang // get selected value
    var newUrl;


    if (modifier == 'es') {

          if (urlString == "http://localhost:2368/")
          {newUrl = urlString;
          window.location = newUrl + 'en/' ;
          }
          else {
           newUrl = urlString.replace(/es/, 'en');
           window.location = newUrl.slice(0, -1) + '-en';
        }
          }

    else if (modifier == 'en') {
        newUrl = urlString.replace(/en/, 'es')
        window.location = newUrl.slice(0, -4);
        }    
        

  });
});
</script>