{{!< default-no-script-en}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


    {{#if @site.description}}
    <header class="page-head">
        <div class="header-home-wrapper">
            <div class="header-left">
                <h2 class="page-head-title">{{@site.description}}</h2>
                <p> Soy María Teresa (Mitty) Romero Antonioli y soy comunicaodra visual,
                    con especial énfasis en diseño gráfico, ilustración y diseño web.
                </p>
            </div>
            <div class="header-right">

            </div>
        </div>
    </header> 
    <section class="tags">
        <div>
            <ul class="tags-row">
                 <li >
                    <button class="tag-button tag-todo">
                    All
                    </button>
                </li>
                {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
                {{#foreach tags}}
                <li>
                    <button class="tag-button tag-trigger tag-{{ slug }}">
                    {{ name }}
                    </button>
                </li>
            {{/foreach}} 
                {{/get}}
           
            </ul>
        </div>

    </section>
    {{/if}}


<div class="post-feed">
    {{#foreach posts}}

        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{> "post-card"}}

    {{/foreach}}
</div>


