{{!--
Re-usable card for linking to posts
<img class="gh-card-image"
    srcset="{{img_url feature_image size="s"}} 300w,
    {{img_url feature_image size="m"}} 600w,
    {{img_url feature_image size="l"}} 1000w,
    {{img_url feature_image size="xl"}} 2000w"
    sizes="(max-width: 1000px) 400px, 700px"
    src="{{img_url feature_image size="m"}}"
    alt="{{#if
    feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
    />
--}}
<article class="{{post_class}} p-4 post-card-container">
    
        <div class="post-card-wrapper">
            <a href="{{url}}">
            <img class="gh-card-image"
                srcset="{{img_url feature_image size="s"}} 300w,
                {{img_url feature_image size="m"}} 600w,
                {{img_url feature_image size="l"}} 1000w,
                {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if
                feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
                </a>
            <div class="post-card-content">
                {{#if tags}}
                <ul class="d-flex gap-2 mb-4">
                    {{#foreach tags}}
                    <p class=" badge bg-secondary text-dark mx-1">{{name}}</p>
                    {{/foreach}}
                </ul>
                {{/if}}
                <a class="post-card-link" href="{{url}}">
                    <h3 class="text-break post-card-title">{{title}} â†’</h3>
                    <p>{{excerpt}}</p>
                </a>
            </div> 
        </div>
</article>
