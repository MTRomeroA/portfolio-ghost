{{!< default}}

{{#post}}

<article class="gh-article {{post_class}}">

    <header class="gh-header gh-canvas">
         {{#if tags}}
                <ul class="d-flex gap-3 justify-content-center">
                    {{#foreach tags}}
                    <p class=" badge bg-secondary text-dark">{{name}}</p>
                    {{/foreach}}
                </ul>
                {{/if}}
        <h1 class="gh-title text-primary">{{title}}</h1>

        {{#if custom_excerpt}}
        <p class="gh-excerpt">{{custom_excerpt}}</p>
        {{/if}}

        {{#if feature_image}}
        <figure class="gh-feature-image">
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 1000px, 2000px"
                loading="lazy"
                src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            />
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
        {{/if}}
    </header>

    <div class="gh-content gh-canvas">
        
        {{content}}
    </div>

    <footer class="gh-footer gh-canvas">


    </footer>

</article>

<aside class="gh-readmore">
    <div class="row">
        <div class="col-12 col-sm-4"></div>
        <div class="col-12 col-sm-4">
             {{#has author="es"}}
           <a class="btn btn-primary btn-lg text-white text-center d-flex justify-content-center" href="http://localhost:2368">Volver a
            portafolio</a>
        {{else}}
           <a class="btn btn-primary btn-lg text-white text-center d-flex justify-content-center" href="http://localhost:2368/en/">Return to portfolio</a>
        {{/has}}

        </div>
        <div class="col-12 col-sm-4"></div>

       

     
    </div>
</aside>

{{/post}}
