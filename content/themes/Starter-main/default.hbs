<!DOCTYPE html>
<html lang="{{@site.locale}}">
    <head>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{asset "built/index.css"}}" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
        <link rel="stylesheet" href="{{asset "css/scss/custom.css"}}" />
        

        <script src="{{asset "built/index.js"}}" defer></script>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"
            integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
            crossorigin="anonymous"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

        <title>{{meta_title}}</title>

        {{ghost_head}}
        {{!-- Outputs important meta data and settings, should always be in
        <head> --}}

        </head>
        <body class="{{body_class}}">
           
            <div class="gh-viewport">
                <header id="gh-head" class="gh-head">
                    <nav class="gh-head-inner gh-container">

                        <div class="gh-head-brand">
                            <a class="gh-burger" role="button">
                                <div class="gh-burger-box">
                                    <div class="gh-burger-inner"></div>
                                </div>
                            </a>
                            <div class="lang-select d-lg-none d-flex">
                                    <div class="lang-select-container d-flex
                                        gap-3 flex-wrap">
                                        {{#page}}
                                        {{#has author="es"}}
                                        <label class="language-label">
                                            <span class="material-symbols-outlined">language</span></label>
                                        <div id="lang-box-es" class="lang-box">es</div>
                                        {{else}}
                                        <label class="language-label">
                                            <span class="material-symbols-outlined">language</span></label>
                                        <div id="lang-box-es" class="lang-box">en</div>
                                        {{/has}}
                                        {{/page}}

                                        {{#post}}
                                        {{#has author="es"}}
                                        <label class="language-label">
                                            <span class="material-symbols-outlined">language</span></label>
                                        <div id="lang-box-es" class="lang-box">es</div>
                                        {{else}}
                                        <label class="language-label">
                                            <span class="material-symbols-outlined">language</span></label>
                                        <div id="lang-box-es" class="lang-box">en</div>
                                        {{/has}}
                                        {{/post}}

                                    </div>
                                </div>
                        </div>
                        
                        <div class="gh-head-menu">
                            {{#page}}
                            {{#has author="es"}}
                            {{navigation}}
                            {{else}}
                            {{navigation type="secondary"}}
                            {{/has}}
                            {{/page}}
                            {{#post}}
                            {{#has author="es"}}
                            {{navigation}}
                            {{else}}
                            {{navigation type="secondary"}}
                            {{/has}}
                            {{/post}}

                            <div class="gh-head-actions">
                                <div class="gh-head-actions-list">
                                    <div class="lang-select d-md-flex d-none">
                                        <div class="lang-select-container d-flex">
                                            {{#page}}
                                            {{#has author="es"}}
                                            <label class="language-label">
                                                <span class="material-symbols-outlined">language</span></label></label>
                                            <div id="lang-box-es" class="lang-box">es</div>
                                            {{else}}
                                            <label class="language-label">
                                                <span class="material-symbols-outlined">language</span></label></label>
                                            <div id="lang-box-es" class="lang-box">en</div>
                                            {{/has}}
                                            {{/page}}

                                            {{#post}}
                                            {{#has author="es"}}
                                            <label class="language-label">
                                                <span class="material-symbols-outlined">language</span></label></label>
                                            <div id="lang-box-es" class="lang-box">es</div>
                                            {{else}}
                                            <label class="language-label">
                                                <span class="material-symbols-outlined">language</span></label></label>
                                            <div id="lang-box-es" class="lang-box">en</div>
                                            {{/has}}
                                            {{/post}}
                                    </div>
                                </div>
                            </div>
                        </div>

                        </div>
                    </nav>
                </header>

                <main class="gh-main">
                     <img class="header-deco-image" src= "{{asset "img/header-deco.svg"}}" alt="">

                    {{{body}}}
                    {{!-- All content gets inserted here, index.hbs, post.hbs,
                    etc --}}

                </main>

                <footer class="gh-foot">
                    <div class="gh-container">
                        <div class="gh-foot-menu">
                            {{#page}}
                            {{#has author="es"}}
                            {{navigation}}
                            {{else}}
                            {{navigation type="secondary"}}
                            {{/has}}
                            {{/page}}
                        </div>
                        <div class="gh-foot-meta">
                            Â© 2024 Mitty Romero Antonioli <br> <a href="mailto:mt.romero.antonioli@gmail.com">mt.romero.antonioli@gmail.com</a>
                        </div>
                    </div>
                </footer>

            </div>
            {{> "language-select"}}

            {{!-- <foot> --}}
                {{ghost_foot}}
                {{!-- Outputs important scripts - should always be included
                before closing body tag --}}

            </body>
        </html>
